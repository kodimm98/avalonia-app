<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PlanMaster.ViewModels"
        xmlns:models="clr-namespace:PlanMaster.Models"
        xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
        xmlns:conv="clr-namespace:PlanMaster.Converters"
        mc:Ignorable="d"
        x:Class="PlanMaster.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="1280" Height="760"
        MinWidth="1100" MinHeight="650"
        Title="PlanMaster">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Window.Resources>
    <conv:BoolToColumnWidthConverter x:Key="BoolToLeftWidth"/>
    <conv:SheetNameRuConverter x:Key="SheetNameRu"/>
    <conv:SummaryRowBackgroundConverter x:Key="SummaryBg"/>
    <conv:SummaryRowFontWeightConverter x:Key="SummaryWeight"/>
  </Window.Resources>

    <Window.Styles>

    <!-- Кнопка "Отчёт" в шапке -->
    <Style Selector="DropDownButton.reportBtn">
      <Setter Property="Foreground" Value="#1A1A1A"/>
      <Setter Property="Background" Value="#F0F0F0"/>
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="CornerRadius" Value="2"/>
      <Setter Property="BorderBrush" Value="#C0C0C0"/>
      <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style Selector="DropDownButton.reportBtn:pointerover">
      <Setter Property="Background" Value="#E5E5E5"/>
      <Setter Property="Foreground" Value="#1A1A1A"/>
    </Style>

    <!-- Выпадающее меню (только то, которое помечено классом reportFlyout) -->
    <Style Selector="MenuFlyoutPresenter.reportFlyout">
      <Setter Property="Background" Value="#FFFFFF"/>
      <Setter Property="BorderBrush" Value="#BFC3C8"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="2"/>
      <Setter Property="Padding" Value="6"/>
    </Style>

    <Style Selector="MenuFlyoutPresenter.reportFlyout MenuItem">
      <Setter Property="Foreground" Value="#1A1A1A"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style Selector="MenuFlyoutPresenter.reportFlyout MenuItem:pointerover">
      <Setter Property="Background" Value="#E6E8EC"/>
      <Setter Property="Foreground" Value="#1A1A1A"/>
    </Style>

    <Style Selector="MenuFlyoutPresenter.reportFlyout Separator">
      <Setter Property="Background" Value="#E3E6EA"/>
      <Setter Property="Margin" Value="6,4"/>
    </Style>

  </Window.Styles>


  <Grid Background="#DCDCDC" RowDefinitions="Auto,Auto,*">

    <!-- TOP BAR -->
    <Border Background="#E6E6E6" Padding="10,8">
      <DockPanel LastChildFill="True">

        <!-- left title -->
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Spacing="2">
          <TextBlock Text="PlanMaster" Foreground="#1A1A1A" FontSize="18" FontWeight="SemiBold"/>
          <TextBlock Text="{Binding StatusText}" Foreground="#5A5A5A" FontSize="12"/>
        </StackPanel>

      </DockPanel>
    </Border>

    <Border Grid.Row="1" Background="#F3F3F3" BorderBrush="#BFC3C8" BorderThickness="0,0,0,1" Padding="10,6">
      <WrapPanel Orientation="Horizontal" ItemSpacing="8" LineSpacing="8">
        <Button Content="Планы" Click="PlansMenu_Click"/>
        <Button Content="{Binding ToggleLeftTitle}" Click="ToggleLeft_Click"/>
        <Button Content="Импорт Excel…" Click="ImportExcel_Click"/>
        <Button Content="Загрузить из БД" Click="LoadDb_Click"/>
        <Button Content="Сохранить" Click="SaveDb_Click"/>
        <Button Content="Открыть в окне" Click="OpenInWindow_Click"/>

        <DropDownButton Content="Отчёт"
                        Classes="reportBtn">
          <DropDownButton.Flyout>
            <MenuFlyout>
              <MenuFlyout.FlyoutPresenterClasses>
                <x:String>reportFlyout</x:String>
              </MenuFlyout.FlyoutPresenterClasses>

              <MenuItem Header="DOCX — сгенерировать" Click="ReportDocx_Click"/>
              <MenuItem Header="DOCX — открыть" Click="OpenLastDocx_Click"/>
              <MenuItem Header="DOCX — печать" Click="PrintLastDocx_Click"/>
              <Separator/>
              <MenuItem Header="PDF — сгенерировать" Click="ReportPdf_Click"/>
              <MenuItem Header="PDF — просмотр" Click="OpenLastPdf_Click"/>
              <MenuItem Header="PDF — печать" Click="PrintLastPdf_Click"/>
            </MenuFlyout>
          </DropDownButton.Flyout>
        </DropDownButton>
      </WrapPanel>
    </Border>

    <!-- CONTENT -->
    <Grid Grid.Row="2" Margin="12">

      <!-- НЕЛЬЗЯ биндингом задавать ColumnDefinitions строкой.
           Нужно задавать ColumnDefinition и биндингить Width. -->
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="{Binding IsLeftShown, Converter={StaticResource BoolToLeftWidth}}"/>
        <ColumnDefinition Width="6"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT -->
      <Border Grid.Column="0"
              Padding="12"
              CornerRadius="2"
              Background="White"
              BorderBrush="#BFC3C8"
              BorderThickness="1"
              IsVisible="{Binding IsLeftShown}">

        <Grid RowDefinitions="Auto,*" RowSpacing="10">

          <TextBlock Text="Листы / таблицы"
                     FontWeight="SemiBold"
                     FontSize="14"/>

          <ListBox Grid.Row="1"
                   ItemsSource="{Binding Tables}"
                   SelectedItem="{Binding SelectedTable}">

            <ListBox.ItemTemplate>
              <DataTemplate x:DataType="models:PlanTable">
                <Border Padding="10"
                        CornerRadius="2"
                        BorderBrush="#D5D5D5"
                        BorderThickness="1"
                        Background="Transparent">
                  <StackPanel>
                    <TextBlock Text="{Binding SheetName, Converter={StaticResource SheetNameRu}}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SemesterTitle}"
                               Opacity="0.65"
                               FontSize="12"/>
                  </StackPanel>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>

        </Grid>
      </Border>

      <!-- splitter -->
      <GridSplitter Grid.Column="1"
                    Width="6"
                    Background="#CFCFCF"
                    IsVisible="{Binding IsLeftShown}"/>

      <!-- RIGHT -->
      <Border Grid.Column="2"
              Padding="12"
              CornerRadius="2"
              Background="White"
              BorderBrush="#BFC3C8"
              BorderThickness="1">

        <TabControl>

          <!-- 1) DISCIPLINES -->
          <TabItem Header="Учебная нагрузка">
            <Grid RowDefinitions="Auto,*" RowSpacing="10">

              <DockPanel Grid.Row="0" LastChildFill="True">
                <TextBlock Text="{Binding SelectedTableTitle}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           DockPanel.Dock="Left"/>

                
              </DockPanel>

              <dg:DataGrid Grid.Row="1"
                           ItemsSource="{Binding CurrentRows}"
                           AutoGenerateColumns="False"
                           IsReadOnly="False"
                           GridLinesVisibility="All"
                           FontSize="12"
                           RowHeight="26"
                           ColumnHeaderHeight="30"
                           HorizontalScrollBarVisibility="Auto"
                           VerticalScrollBarVisibility="Auto">

                <!-- Подсветка итоговых строк -->
                <dg:DataGrid.Styles>
                  <Style Selector="dg|DataGridCell">
                    <Setter Property="Background"
                            Value="{ReflectionBinding IsSummary, Converter={StaticResource SummaryBg}}"/>
                    <Setter Property="FontWeight"
                            Value="{ReflectionBinding IsSummary, Converter={StaticResource SummaryWeight}}"/>
                  </Style>
                </dg:DataGrid.Styles>

                <dg:DataGrid.Columns>

                  <!-- Базовые -->
                  <dg:DataGridTextColumn Header="№" Binding="{Binding Number}" Width="50"/>
                  <dg:DataGridTextColumn Header="Наименование дисциплины" Binding="{Binding DisciplineName}" Width="320"/>
                  <dg:DataGridTextColumn Header="Факультет, спец., группа / Поручено/Вып." Binding="{Binding FacultyGroup}" Width="240"/>

                  <!-- Количество -->
                  <dg:DataGridTextColumn Header="Курс" Binding="{Binding Course}" Width="60"/>
                  <dg:DataGridTextColumn Header="Потоков" Binding="{Binding Streams}" Width="75"/>
                  <dg:DataGridTextColumn Header="Групп" Binding="{Binding Groups}" Width="70"/>
                  <dg:DataGridTextColumn Header="Студентов" Binding="{Binding Students}" Width="95"/>

                  <!-- Часы -->
                  <dg:DataGridTextColumn Header="Лекции" Binding="{Binding Lek}" Width="70"/>
                  <dg:DataGridTextColumn Header="Практика" Binding="{Binding Pr}" Width="70"/>
                  <dg:DataGridTextColumn Header="Лаб." Binding="{Binding Lab}" Width="60"/>
                  <dg:DataGridTextColumn Header="КСР" Binding="{Binding Ksr}" Width="60"/>
                  <dg:DataGridTextColumn Header="КП" Binding="{Binding Kp}" Width="60"/>
                  <dg:DataGridTextColumn Header="КР" Binding="{Binding Kr}" Width="60"/>
                  <dg:DataGridTextColumn Header="Контр. раб." Binding="{Binding KontrolRab}" Width="90"/>
                  <dg:DataGridTextColumn Header="Зач." Binding="{Binding Zach}" Width="60"/>
                  <dg:DataGridTextColumn Header="Диф. зач." Binding="{Binding DifZach}" Width="80"/>
                  <dg:DataGridTextColumn Header="Экз." Binding="{Binding Exz}" Width="60"/>
                  <dg:DataGridTextColumn Header="Гос. экз." Binding="{Binding GosExz}" Width="80"/>
                  <dg:DataGridTextColumn Header="ГЭК" Binding="{Binding Gek}" Width="60"/>
                  <dg:DataGridTextColumn Header="Рук. ВКР" Binding="{Binding RukVkr}" Width="80"/>
                  <dg:DataGridTextColumn Header="Рец." Binding="{Binding Rec}" Width="60"/>
                  <dg:DataGridTextColumn Header="Уч. практ." Binding="{Binding UchPr}" Width="80"/>
                  <dg:DataGridTextColumn Header="Произв. практ." Binding="{Binding PrPr}" Width="95"/>
                  <dg:DataGridTextColumn Header="Предд. практ." Binding="{Binding PredPr}" Width="95"/>

                  <dg:DataGridTextColumn Header="ВСЕГО" Binding="{Binding Total}" Width="80"/>
                  <dg:DataGridTextColumn Header="Примечание" Binding="{Binding Note}" Width="200"/>

                </dg:DataGrid.Columns>
              </dg:DataGrid>

            </Grid>
          </TabItem>

          <!-- 2) SUMMARY -->
          <TabItem Header="Итоговая таблица">
            <dg:DataGrid ItemsSource="{Binding SummaryRows}"
                         AutoGenerateColumns="False"
                         IsReadOnly="False"
                         GridLinesVisibility="All"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto">
              <dg:DataGrid.Columns>
                <dg:DataGridTextColumn Header="№" Binding="{Binding Code}" Width="70"/>
                <dg:DataGridTextColumn Header="Виды работ" Binding="{Binding WorkName}" Width="*"/>
                <dg:DataGridTextColumn Header="1 семестр план" Binding="{Binding Sem1Plan}" Width="120"/>
                <dg:DataGridTextColumn Header="1 семестр факт" Binding="{Binding Sem1Fact}" Width="120"/>
                <dg:DataGridTextColumn Header="2 семестр план" Binding="{Binding Sem2Plan}" Width="120"/>
                <dg:DataGridTextColumn Header="2 семестр факт" Binding="{Binding Sem2Fact}" Width="120"/>
                <dg:DataGridTextColumn Header="год план" Binding="{Binding YearPlan}" Width="100"/>
                <dg:DataGridTextColumn Header="год факт" Binding="{Binding YearFact}" Width="100"/>
              </dg:DataGrid.Columns>
            </dg:DataGrid>
          </TabItem>

          <!-- 3) METHODICAL -->
          <TabItem Header="Учебно-методическая нагрузка">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
              <StackPanel Spacing="12">

                <StackPanel Spacing="6">
                  <TextBlock Text="Разработка методического обеспечения учебного процесса"
                             FontWeight="SemiBold"
                             FontSize="14"/>
                  <dg:DataGrid ItemsSource="{Binding MethodicalProcessRows}"
                               AutoGenerateColumns="False"
                               IsReadOnly="False"
                               CanUserAddRows="True"
                               GridLinesVisibility="All"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"
                               RowHeight="26"
                               ColumnHeaderHeight="30">
                    <dg:DataGrid.Columns>
                      <dg:DataGridTextColumn Header="Наименование работ" Binding="{Binding WorkName}" Width="*"/>
                      <dg:DataGridTextColumn Header="Затраты времени (час.)" Binding="{Binding TimeHours}" Width="160"/>
                      <dg:DataGridTextColumn Header="Сроки исполнения" Binding="{Binding Deadline}" Width="200"/>
                      <dg:DataGridTextColumn Header="Отметка об исполнении" Binding="{Binding CompletionNote}" Width="200"/>
                    </dg:DataGrid.Columns>
                  </dg:DataGrid>
                </StackPanel>

                <StackPanel Spacing="6">
                  <TextBlock Text="Подготовка к изданию учебно-методических разработок"
                             FontWeight="SemiBold"
                             FontSize="14"/>
                  <dg:DataGrid ItemsSource="{Binding MethodicalPublishingRows}"
                               AutoGenerateColumns="False"
                               IsReadOnly="False"
                               CanUserAddRows="True"
                               GridLinesVisibility="All"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"
                               RowHeight="26"
                               ColumnHeaderHeight="30">
                    <dg:DataGrid.Columns>
                      <dg:DataGridTextColumn Header="Наименование работ" Binding="{Binding WorkName}" Width="*"/>
                      <dg:DataGridTextColumn Header="Затраты времени (час.)" Binding="{Binding TimeHours}" Width="160"/>
                      <dg:DataGridTextColumn Header="Сроки исполнения" Binding="{Binding Deadline}" Width="200"/>
                      <dg:DataGridTextColumn Header="Отметка об исполнении" Binding="{Binding CompletionNote}" Width="200"/>
                    </dg:DataGrid.Columns>
                  </dg:DataGrid>
                </StackPanel>

                <StackPanel Spacing="6">
                  <TextBlock Text="Совершенствование учебно-материальной базы"
                             FontWeight="SemiBold"
                             FontSize="14"/>
                  <dg:DataGrid ItemsSource="{Binding MethodicalBaseRows}"
                               AutoGenerateColumns="False"
                               IsReadOnly="False"
                               CanUserAddRows="True"
                               GridLinesVisibility="All"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"
                               RowHeight="26"
                               ColumnHeaderHeight="30">
                    <dg:DataGrid.Columns>
                      <dg:DataGridTextColumn Header="Наименование работ" Binding="{Binding WorkName}" Width="*"/>
                      <dg:DataGridTextColumn Header="Затраты времени (час.)" Binding="{Binding TimeHours}" Width="160"/>
                      <dg:DataGridTextColumn Header="Сроки исполнения" Binding="{Binding Deadline}" Width="200"/>
                      <dg:DataGridTextColumn Header="Отметка об исполнении" Binding="{Binding CompletionNote}" Width="200"/>
                    </dg:DataGrid.Columns>
                  </dg:DataGrid>
                </StackPanel>

              </StackPanel>
            </ScrollViewer>
          </TabItem>

        </TabControl>

      </Border>
    </Grid>
  </Grid>
</Window>
